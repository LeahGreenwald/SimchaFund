@model SimchosViewModel
@using SimchaFund.Data;

<div class="row col-md-12">
        <div class="col-md-4 offset-4">
            <button class="btn btn-outline-warning" id="new-simcha">New Simcha</button>
        </div>
        <div class="row">
            <table class="table table-hover table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Contributions</th>
                        <th>Simcha Name</th>
                        <th>Contributor Count</th>
                        <th>Total</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Simcha simcha in Model.Simchos)
                    {
                        <tr>
                            <td><a href="/simchos/contributions?simchaid=@simcha.Id" class="btn btn-outline-success">Contributions</a></td>
                            <td>@simcha.Name</td>
                            <td>@simcha.ContributorCount / @Model.TotalContributors</td>
                            <td>@simcha.Total</td>
                            <td>@simcha.Date.ToLongDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New Simcha</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/simchos/new" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="simcha-name">Simcha Name</label>
                            <input type="text" class="form-control" id="simcha-name" name="name" placeholder="Simcha name" />
                        </div>
                        <div class="form-group">
                            <label for="date">Date</label>
                            <input type="date" class="form-control" name="date" id="Date" placeholder="mm/dd/yyyy" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="save">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    <script src="~/js/index.js"></script>
} 