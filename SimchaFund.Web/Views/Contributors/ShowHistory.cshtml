@model HistoryViewModel
@using SimchaFund.Data

<div class="header">
    <h1>History for @Model.Name</h1>
    <h3>Current Balance: @Model.Balance</h3>
</div>

<div class="row header">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
            @foreach (History history in Model.Histories)
            {
                <tr>
                    <td>
                        @history.Action
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @history.Date.ToLongDateString()
                    </td>
                    <td style="text-align: center; vertical-align: middle;">
                        @history.Amount
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div style="text-align:center;">
    <a class="btn-lg btn-danger" href="/contributors">Back to Contributors</a>
</div>